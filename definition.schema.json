{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "fixture",
  "title": "Fixture Schema",
  "description": "Fixture Schema",
  "type": "object",
  "properties": {
    "type": {
      "enum": [
        "struct",
        "enum"
      ]
    },
    "rust": {
      "$ref": "#/$defs/rustOptions"
    },
    "members": {
      "anyOf": [
        {
          "if": {
            "properties": {
              "type": {
                "const": "struct"
              }
            }
          },
          "then": {
            "$ref": "#/$defs/structMembers"
          }
        },
        {
          "if": {
            "properties": {
              "type": {
                "const": "enum"
              }
            }
          },
          "then": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      ]
    }
  },
  "required": [
    "type",
    "members"
  ],
  "$defs": {
    "rustOptions": {
      "type": "object",
      "properties": {
        "derive": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "attrs": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "primitiveTypes": {
      "enum": [
        "bool",
        "string",
        "f32",
        "f64",
        "i8",
        "i16",
        "i32",
        "i64",
        "i128",
        "u8",
        "u16",
        "u32",
        "u64",
        "u128"
      ]
    },
    "structMembers": {
      "type": "object",
      "additionalProperties": {
        "anyOf": [
          {
            "$ref": "#/$defs/primitiveTypes"
          },
          {
            "type": "object",
            "properties": {
              "type": {
                "$ref": "#/$defs/primitiveTypes"
              },
              "rust": {
                "$ref": "#/$defs/rustOptions"
              },
              "optional": {
                "type": "boolean"
              }
            }
          },
          {
            "type": "object",
            "properties": {
              "use": {
                "type": "string"
              }
            }
          },
          {
            "type": "object",
            "properties": {
              "array": {
                "type": "object",
                "properties": {
                  "items": {
                    "type": "string"
                  }
                }
              }
            }
          }
        ]
      }
    }
  }
}
